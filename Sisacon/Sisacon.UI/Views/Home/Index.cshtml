@using System.Web.Optimization @{ Layout = null; }

<!DOCTYPE html>

<html lang="pt-br" ng-app="app">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Sisacon - Automação e Controle</title>
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"> @Styles.Render("~/bundles/style")
</head>

<body ng-controller="IndexController" ng-cloak>
	<!--BARRA LATERAL-->
	<div id="sidebar" class="ui inverted vertical accordion menu sidebar">
		<div class="item">
			<h2 class="ui inverted orange header">
				Menu
			</h2>
		</div>
		<div class="item">
			<a class="title">
				<i class="dropdown icon"></i>
				<span class="ui inverted header"><i class="edit icon"></i>Cadastros</span>
			</a>
			<div class="content">
				<div class="item">
					<button class="ui fluid blue button">
                        <i class="lab icon"></i>
                        Materiais
                    </button>
				</div>
				<div class="item">
					<button class="ui fluid blue button">
                        <i class="diamond icon"></i>
                        Produtos
                    </button>
				</div>
				<div class="item">
					<a href="#/clientList" class="ui fluid blue button">
						<i class="users icon"></i> Clientes
					</a>
				</div>
				<div class="item">
					<button class="ui fluid blue button">
                        <i class="truck icon"></i>
                        Fornecedores
                    </button>
				</div>

			</div>
		</div>
		<div class="item">
			<a class="title">
				<i class="dropdown icon"></i>
				<span class="ui inverted header"><i class="dollar icon"></i> Orçamentos</span>
			</a>
			<div class="content">
				<div class="item">
					<a href="#/estimateDashboard" class="ui fluid grey button">
						<i class="desktop icon"></i> Painel
					</a>
				</div>
			</div>
		</div>
	</div>
	<!--CONTEUDO A SER EMPURRADO PELA BARRA LATERAL-->
	<div class="pusher">

		<!--MENU PRICIPAL - TOP-->
		<div class="ui inverted attached stackable menu">
			<a ng-click="openMenu()" class="item">
				<i class="large orange sidebar icon"></i>
			</a>
			<a class="header item" href="#/initialDashboard" data-content="Painel Inicial" data-variation="inverted">
				<h4 class="ui large orange header">Sisacon</h4>
			</a>
			<div class="right menu">

				<!--EMPRESA-->
				<a class="item" href="#/company">
					<i class="large flag orange icon"></i> Minha Empresa
				</a>
				<!--NOTIFICAÇÕES-->
				<a id="btnNotification" class="item">
					<i class="large alarm outline orange icon"></i> Notificações
					<div class="floating bottom ui orange label" ng-if="notifications.length > 0">{{notifications.length}}</div>
				</a>
				<!--CONFIGURAÇÕES-->
				<a class="item">
					<i class="large settings orange icon"></i> Configurações
				</a>
				<!--USUARIO-->
				<a id="btnAccount" class="item">
					<i class="large user orange icon"></i> Minha Conta
				</a>
				<div class="item"></div>
			</div>
		</div>
		<div style="height:1px"></div>

		<!--CONTEUDO DINAMICO-->
		<ng-view>
		</ng-view>

	</div>

	<!--POPUS-->
	<div id="accountPopup" class="ui popup">
		<div class="ui inverted stackable vertical accordion menu">
			<a class="item">
                    Minha Conta
                </a>
		</div>
	</div>

	<div id="notificationPopup" class="ui flowing transition hidden popup">

		<h2 class="ui header">Alertas</h2>

		<div class="ui stackable two column grid" ng-repeat="item in notifications">

			<div class="ui four wide collumn">
				<h4 class="ui header {{item.notificationClassCSS}}">
					<div class="content">
						{{item.message}}
						<div class="sub header">{{item.timeSinceCreation}}</div>
					</div>
				</h4>
			</div>
			<div class="ui two wide collumn">
				<a href="{{item.link}}" class="ui basic icon button" ng-click="updateStatusVisualized(item.id);">
					<i class="check icon"></i>
				</a>
			</div>
            
		</div>

        <div class="ui divider"></div>

		<div class="ui stackable grid" ng-if="notifications.length === 0">
			<h4 class="ui header">
				<div class="sub header">
					No momento, voçê não possui alertas pendentes
				</div>
			</h4>
		</div>

	</div>
	<!--MODALS-->
	<div class="ui small modal">
		<div class="header">
			<p>Seja Bem Vindo(a).</p>
		</div>
		<div class="image content">
			<div class="description">
				<h4>Agora falta pouco para voçê começar a desfrutar de toda comodidade que o Sisacon pode te oferecer.</h4>
				<h4>
					Nós queremos te ajudar a começar ou ampliar o seu negócio, mas para isso precisamos de mais algumas<br>informações.
				</h4>
				<h4>Prometo que não vai demorar. </h4>
			</div>
		</div>
		<div class="actions">
			<div class="two ui buttons">
				<a class="ui ok green button" href="#/company">
					<i class="checkmark icon"></i> Finalizar Cadastro
				</a>
			</div>
		</div>
	</div>

	@Scripts.Render("~/bundles/jquery") @Scripts.Render("~/bundles/angular") @Scripts.Render("~/bundles/design")
</body>

</html>