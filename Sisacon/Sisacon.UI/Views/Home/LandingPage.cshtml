
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="pt-br" ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sisacon - Automação e Controle</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="shortcut icon" href="~/Content/logo.ico" type="image/x-icon" />
    @Styles.Render("~/bundles/style")
</head>
<body ng-controller="LandingPageController as vm">

    <div class="ui big top stackable menu">
        <a href="#/landingPage" class="header item">
            <img class="ui centered tiny image" src="/Content/logo.png" alt="BeloArte" />
        </a>
        <div class="right menu">
            <div class="item">
                <a href="#/singup" class="ui primary button">Cadastre-se</a>
            </div>
            <div class="item">
                <a href="#/login" class="ui positive button">Entrar</a>
            </div>
        </div>
    </div>

    <div class="ui stackable grid" ng-view>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/design")
</body>
</html>
